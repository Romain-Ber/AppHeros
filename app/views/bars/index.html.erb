<% content_for :title, "Les Tavernes" %>

<div data-controller="filters">
  <div class="search-bar-index">
    <%= render "bars/search"%>
  </div>
  <%= render "bars/category"%>

  <div class="d-flex flex-column gap-2">
    <%# <div class="card-info-bar-index"> %>
      <% @bars.first(100).each do |bar| %>
        <%= link_to bar_path(bar), class:"bar-card", data: {filters_target: "bar", count: bar.player_count, id: bar.id} do %>
          <%= render "card", bar: bar %>
        <% end %>
      <% end %>
    <%# </div> %>
  </div>
</div>
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

