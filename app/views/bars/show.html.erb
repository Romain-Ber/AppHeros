<% content_for :title, "#{@bar.name}" %>
<%= cl_image_tag(@bar.image_id, class:"bar-content-info-image") %>
<div class="bar-content-text">
  <p class="px-4" style="font-size:22px; text-align:center;"><strong></strong><%= @bar.description %></p>
  <span class="text-small px-2" style="text-align: center;"><%= @bar.address %></span>
</div>
<div class="bar-content-bottom">
  <div class="leaderboard">
    <div class="leaderboard-player first-player">
      <%= cl_image_tag(@player1.image_id, class:'avatar avatar-gold', :width=>100, :height=>100, :gravity=>"face", :crop=>"thumb") unless @player1.nil? %>
      <div class="leadearboard-player-infos">
        <p><%= @player1.username unless @player1.nil? %></p>
        <span class="text-small"><%= @player1.score unless @player1.nil? %></span>
      </div>
    </div>
    <div class="leaderboard-player second-player">
      <%= cl_image_tag(@player2.image_id, class:'avatar avatar-silver', :width=>100, :height=>100, :gravity=>"face", :crop=>"thumb") unless @player2.nil? %>
      <div class="leadearboard-player-infos">
        <p><%= @player2.username unless @player2.nil? %></p>
        <span class="text-small"><%= @player2.score unless @player2.nil? %></span>
      </div>
    </div>
    <div class="leaderboard-player third-player">
      <%= cl_image_tag(@player3.image_id, class:'avatar avatar-bronze', :width=>100, :height=>100, :gravity=>"face", :crop=>"thumb") unless @player3.nil? %>
      <div class="leadearboard-player-infos">
        <p><%= @player3.username unless @player3.nil? %></p>
        <span class="text-small"><%= @player3.score unless @player3.nil? %></span>
      </div>
    </div>
  </div>
  <%= link_to bar_players_path(@bar), class: 'btn button' do %>
    <%= image_tag("icons/swords.svg") %>
    <span class="mx-1">
      Provoquer en duel
    </span>
    <%= image_tag("icons/swords.svg") %>
  <% end %>
</div>
