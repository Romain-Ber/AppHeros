<% content_for :title, "Tap Ta Bière!" %>
<div id="game-container"
  data-controller="taptabiere"
  data-taptabiere-user-id-value="<%= current_user.id %>"
  data-taptabiere-challenge-id-value="<%= @challenge.id %>"

><div id="countdown" data-taptabiere-target="countdown">3</div>
  <h2 class="title-page" data-taptabiere-target="title">Termine vite ta bière !</h2>


  <div id="beer-container">
    <div class="pour"></div>
    <div id="beaker" data-action="click->taptabiere#tap">
      <div class="beer-foam" data-taptabiere-target="foam">
        <div class="foam-1"></div>
        <div class="foam-2"></div>
        <div class="foam-3"></div>
        <div class="foam-4"></div>
        <div class="foam-5"></div>
        <div class="foam-6"></div>
        <div class="foam-7"></div>
      </div>

      <div id="liquid" data-taptabiere-target="beerLevel">

        <div class="bubble bubble1"></div>
        <div class="bubble bubble2"></div>
        <div class="bubble bubble3"></div>
        <div class="bubble bubble4"></div>
        <div class="bubble bubble5"></div>
      </div>
    </div>
  </div>
  <%= link_to "Voir le résultat", challenge_result_path(@challenge), class:'btn button w-100', 'data-taptabiere-target' => "continueButton", style: 'display: none;' %>
</div>
