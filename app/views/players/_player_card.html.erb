<div class="player-card">
  <%= cl_image_tag(user.image_id, :width=>100, :height=>100, :gravity=>"face", :crop=>"thumb") %>
  <div class="player-card-details">
    <div class="player-card-details-username">
      <h2><%= user.username %></h2>
    </div>
    <div class="player-card-details-tags">
      <% playerScore = Score.where(user: user, bar: @bar).sum(:score) %>
      <% case %>
      <% when playerScore < 15 %>
      <div class="player-card-details-tags-hero", style="background-color: #4C9540;">
        <p>Noob</p>
      <% when playerScore < 30 %>
      <div class="player-card-details-tags-hero", style="background-color: #405395;">
        <p>Novice</p>
      <% when playerScore < 45 %>
      <div class="player-card-details-tags-hero", style="background-color: #7F4095;">
        <p>Combattant aguerri</p>
      <% when playerScore < 60 %>
      <div class="player-card-details-tags-hero", style="background-color: #ED6418;">
        <p>Pilier</p>
      <% else %>
      <div class="player-card-details-tags-hero", style="background-color: #ED1818;">
        <p>Héros Légendaire</p>
      <% end %>
        <div class="player-card-details-tags-online"></div>
        <div class="player-card-details-tags-online-shine"></div>
      </div>
      <div class="player-card-details-tags-spacer"></div>
      <div class="player-card-details-tags-age">
        <p><%= user.age %> ans</p>
      </div>
    </div>
  </div>
</div>
